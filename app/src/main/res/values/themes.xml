<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Football" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="android:statusBarColor">@color/lightBlue</item>
        <item name="android:textColor">@color/cyanide</item>
    </style>
    <style name="Theme.splashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name="fontStyleSubtitle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/Karantina_Regular</item>
        <item name="fontFamily">@font/Karantina_Regular</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/cyanide</item>
    </style>
    <style name="TitleFontStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/Karantina_Bold</item>
        <item name="fontFamily">@font/Karantina_Bold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/cyanide</item>
    </style>
    <style name="fontStyleBigSubtitle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/Karantina_Regular</item>
        <item name="fontFamily">@font/Karantina_Regular</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/cyanide</item>
    </style>
    <style name="BigTitleFontStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/Karantina_Bold</item>
        <item name="fontFamily">@font/Karantina_Bold</item>
        <item name="android:textSize">40sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/cyanide</item>
    </style>
    <style name="PlayerFontBold" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/Karantina_Bold</item>
        <item name="fontFamily">@font/Karantina_Bold</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PlayerFontRegular" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/Karantina_Regular</item>
        <item name="fontFamily">@font/Karantina_Regular</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">30%</item>
        <item name="cornerSizeBottomRight">30%</item>
    </style>
</resources>