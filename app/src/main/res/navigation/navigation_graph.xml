<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/lobby">
    <fragment
        android:id="@+id/lobby"
        android:name="com.example.holovanova_football.fragment.LobbyFragment"
        tools:layout="@layout/fragment_lobby">
        <action
            android:id="@+id/action_to_teamFragment"
            app:destination="@id/teamFragment" />
    </fragment>

    <include app:graph="@navigation/head_to_head_navigation_graph" />

    <fragment
        android:id="@+id/favorite"
        android:name="com.example.holovanova_football.fragment.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/settings"
        android:name="com.example.holovanova_football.fragment.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/teamFragment"
        android:name="com.example.holovanova_football.fragment.TeamFragment"
        android:label="fragment_team"
        tools:layout="@layout/fragment_team">
        <action
            android:id="@+id/action_to_lobbyFragment"
            app:destination="@id/lobby" />
        <action
            android:id="@+id/action_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.holovanova_football.fragment.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player">
        <action
            android:id="@+id/action_to_teamFragment"
            app:destination="@id/teamFragment" />
        <argument
            android:name="player"
            app:argType="integer" />
        <argument
            android:name="team"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/modalBottomSheet"
        android:name="com.example.holovanova_football.fragment.VenueBottomSheet"
        tools:layout="@layout/layout_venue" />
</navigation>