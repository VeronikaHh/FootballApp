<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TeamFragment">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginEnd="64dp"
        app:expandedTitleMarginStart="48dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:src="@drawable/app_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    app:tint="@color/cyanid" />
                <TextView
                    android:id="@+id/team_logo_toolbar"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textColor="@color/cyanid"
                    android:textSize="17dp"
                    android:text="MANCHESTER UNATED" />
            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/team_logo"
                android:layout_margin="35dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/team_name"
                android:src="@drawable/ic_favorite"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:minHeight="130dp"
                android:minWidth="100dp"
                app:tint="@color/blue" />
            <TextView
                android:id="@+id/team_name"
                app:layout_constraintTop_toBottomOf="@id/team_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:textAlignment="center"
                android:textSize="35dp"
                android:text="MANCHESTER UNITED"/>
            <ImageView
                android:id="@+id/league_logo"
                android:layout_margin="35dp"
                app:layout_constraintTop_toBottomOf="@id/team_name"
                app:layout_constraintEnd_toStartOf="@id/country_flag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/league_name"
                android:src="@drawable/ic_favorite"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:tint="@color/blue" />
            <TextView
                android:id="@+id/league_name"
                app:layout_constraintTop_toBottomOf="@id/league_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="80dp"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="Premier League"/>
            <ImageView
                android:id="@+id/country_flag"
                android:layout_margin="35dp"
                app:layout_constraintTop_toBottomOf="@id/team_name"
                app:layout_constraintStart_toEndOf="@id/league_logo"
                app:layout_constraintEnd_toStartOf="@id/venue_photo"
                app:layout_constraintBottom_toTopOf="@id/country_name"
                android:src="@drawable/ic_favorite"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:tint="@color/blue" />
            <TextView
                android:id="@+id/country_name"
                app:layout_constraintTop_toBottomOf="@id/country_flag"
                app:layout_constraintStart_toEndOf="@id/league_name"
                app:layout_constraintEnd_toStartOf="@id/venue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="England"/>
            <ImageView
                android:id="@+id/venue_photo"
                android:layout_margin="35dp"
                app:layout_constraintTop_toBottomOf="@id/team_name"
                app:layout_constraintStart_toEndOf="@id/country_flag"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/venue_name"
                android:src="@drawable/ic_favorite"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:tint="@color/blue" />
            <TextView
                android:id="@+id/venue_name"
                app:layout_constraintTop_toBottomOf="@id/venue_photo"
                app:layout_constraintStart_toEndOf="@id/country_name"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="Old Trafferd"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/country_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/streak"
                    android:layout_margin="25dp"/>
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    />
            </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.CollapsingToolbarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>