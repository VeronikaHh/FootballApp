<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TeamFragment">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginEnd="64dp"
        app:expandedTitleMarginStart="48dp"
        app:layout_scrollFlags="scroll|enterAlways">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways">
                <ImageView
                    android:id="@+id/back"
                    android:src="@drawable/app_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    app:tint="@color/cyanide" />
                <TextView
                    android:id="@+id/title_toolbar"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    style="@style/fontStyleBigSubtitle"/>
            </androidx.appcompat.widget.Toolbar>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/team_container"
                        android:paddingTop="60dp"
                        android:paddingBottom="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/team_logo"
                            android:layout_margin="35dp"
                            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                            android:layout_width="133dp"
                            android:layout_height="133dp"
                            android:scaleType="centerCrop"
                            app:layout_collapseMode="parallax"
                            android:minHeight="130dp"
                            android:minWidth="100dp" />
                        <TextView
                            android:id="@+id/team_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="250dp"
                            android:textAlignment="center"
                            style="@style/BigTitleFontStyle"/>
                    </LinearLayout>

                    <LinearLayout
                        android:baselineAligned="false"
                        android:id="@+id/second_container"
                        android:layout_width="match_parent"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/league_logo"
                                android:layout_width="31dp"
                                android:layout_height="35dp"
                                android:scaleType="centerCrop"
                                app:layout_collapseMode="parallax"/>
                            <TextView
                                android:id="@+id/league_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                style="@style/fontStyleSubtitle"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/country_flag"
                                android:layout_width="46dp"
                                android:layout_height="35dp"
                                android:scaleType="centerCrop"
                                app:layout_collapseMode="parallax"/>
                            <TextView
                                android:id="@+id/country_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                style="@style/fontStyleSubtitle"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/venue_photo"
                                android:layout_width="46dp"
                                android:layout_height="35dp"
                                android:scaleType="centerCrop"
                                app:layout_collapseMode="parallax"/>
                            <TextView
                                android:id="@+id/venue_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                style="@style/fontStyleSubtitle"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/streak_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/streak"
                            android:gravity="center"
                            style="@style/TitleFontStyle"
                            android:layout_margin="20dp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingTop="10dp"
                            android:id="@+id/streak_rv"
                            android:scrollbars="none"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:fadingEdge="horizontal"
                            tools:listitem="@layout/streak_item">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <LinearLayout
                            android:paddingStart="50dp"
                            android:paddingEnd="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="15dp"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/home"
                                android:layout_weight="1"
                                style="@style/TitleFontStyle"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/away"
                                android:layout_weight="1"
                                style="@style/TitleFontStyle"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingStart="50dp"
                            android:paddingEnd="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <TextView
                                android:id="@+id/goals_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/goals"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:id="@+id/goals_away"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingStart="50dp"
                            android:paddingEnd="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <TextView
                                android:id="@+id/goals_avg_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/goals_avg"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:id="@+id/goals_avg_away"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingStart="50dp"
                            android:paddingEnd="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <TextView
                                android:id="@+id/clean_sheet_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/clean_sheet"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:id="@+id/clean_sheet_away"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                        </LinearLayout>
                        <TextView
                            android:layout_margin="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/season_records"
                            style="@style/fontStyleBigSubtitle"/>
                        <LinearLayout
                            android:paddingStart="50dp"
                            android:paddingEnd="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="15dp"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/home"
                                android:layout_weight="1"
                                style="@style/TitleFontStyle"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/away"
                                android:layout_weight="1"
                                style="@style/TitleFontStyle"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingStart="50dp"
                            android:paddingEnd="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <TextView
                                android:id="@+id/win_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/win"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:id="@+id/win_away"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingStart="50dp"
                            android:paddingEnd="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <TextView
                                android:id="@+id/lose_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/lose"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:id="@+id/lose_away"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                        </LinearLayout>
                        <TextView
                            android:layout_margin="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/longest_streak"
                            style="@style/TitleFontStyle"/>
                        <LinearLayout
                            android:paddingStart="50dp"
                            android:paddingEnd="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <TextView
                                android:id="@+id/win"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:id="@+id/lose"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:id="@+id/draw"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingStart="50dp"
                            android:paddingEnd="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/win"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/lose"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="@string/draw"
                                android:layout_weight="1"
                                style="@style/fontStyleSubtitle"/>
                        </LinearLayout>
                        <TextView
                            android:layout_margin="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/players"
                            style="@style/TitleFontStyle"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/player_rv"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:scrollbars="none"
                            android:fadingEdge="horizontal"
                            tools:listitem="@layout/player_rv_item">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

    </com.google.android.material.appbar.CollapsingToolbarLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/cyanide"
        android:layout_gravity="center"
        android:visibility="gone"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>