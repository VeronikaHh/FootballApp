<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/blue"
    android:id="@+id/main_container">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/player_photo_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/player_name"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/player_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/player_photo"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/player_photo_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/player_position"
            app:layout_constraintEnd_toStartOf="@id/player_number"
            android:text="Name Surname"
            style="@style/fontStyleSubtitle"/>
        <TextView
            android:id="@+id/player_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/player_photo_container"
            app:layout_constraintTop_toBottomOf="@id/player_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="DEFENDER"
            style="@style/fontStyleSubtitle"
            />
        <TextView
            android:id="@+id/player_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/player_name"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="35dp"
            android:text="5"
            style="@style/fontStyleSubtitle"
            android:textColor="@color/white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>